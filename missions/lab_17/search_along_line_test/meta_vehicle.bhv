//----------------------------------------------
// Vehicle behavior file
//----------------------------------------------

initialize   DEPLOY  = false
initialize   RETURN  = false
initialize   STATION_KEEP = false
initialize   SURVEY  = false //true
initialize   AVOID   = true
initialize   SURVEY_UNDERWAY = false
initialize   OPREGION = true
initialize   OPREGION = true
initialize   SEARCH_ALONG_LINE = false
//initialize   ON_STATION = true
initialize   ZIGZAG = false
initialize   INIT = false
initialize   LOITER = true

set MODE = ACTIVE {
  DEPLOY = true
} INACTIVE

set MODE = RETURNING {
  MODE = ACTIVE
  RETURN = true
}

set MODE = INITIALIZING {
  MODE = ACTIVE
  INIT = true
}

set MODE = LOITERING {
  MODE = ACTIVE
  LOITER = true
}

set MODE = SURVEYING {
  MODE = ACTIVE
  SURVEY = true
  RETURN = false
}

set MODE = SEARCHING_ALONG_LINE {
  MODE = ACTIVE
  SEARCH_ALONG_LINE = true
  RETURN = false
}

set MODE = ZIGZAGGING {
  MODE = ACTIVE
  ZIGZAG = true
  RETURN = false
}

//----------------------------------------------
Behavior = BHV_Waypoint
{
  name       = waypt_init
  pwt        = 100
  condition  = MODE == INITIALIZING
  endflag    = INIT   = false
  endflag    = ZIGZAG = true

         speed = 2.0
        radius = 2.0
     point     = 50,-100
        repeat = 0
          lead = 8
}
//----------------------------------------------
Behavior = BHV_ZigZag
{
  name = zigzag_survey
  condition = MODE == ZIGZAGGING

  speed = 1.5
  updates = PROSECUTE_HEADING
  period = 50
  amplitude = 150
  heading = 90
  zigzag_function = linear
  duration = no-time-limit
}
//----------------------------------------------
Behavior = BHV_RubberBand
{
  name = bhv_rubber_band
  pwt       = 100
  condition = ON_STATION = true
  condition = RETURN = false
  point        = 100,-100
  inner_radius = 3
  outer_radius = 15
  outer_speed = 2.2
  extra_speed = 2.2
}


//----------------------------------------------
Behavior = BHV_SearchAlongLine
{
  name         = line_survey
  pwt          = 100
  condition    = MODE==SEARCHING_ALONG_LINE
  perpetual    = true

  speed       = 2    // Default
  offset_dist = 0    // Default
  px          = 100    // Default
  py          = 0    // Default
  alpha       = 45   // Default
  kp          = 1    // Default
}


//----------------------------------------------
Behavior = BHV_Loiter
{
  // General Behavior Parameters
  // ---------------------------
  name         = transit               // example
  pwt          = 100                   // default
  condition    = MODE==LOITERING       // example
  duration     = 150
  updates      = LOITER_UPDATES        // example
  endflag      = LOITER=false
  endflag      = INIT=true

  // Parameters specific to this behavior
  // ------------------------------------
       acquire_dist = 10               // default
     capture_radius = 3                // default
    center_activate = false            // default
          clockwise = best             // default
        slip_radius = 15               // default
              speed = 3                // default
      spiral_factor = -2               // default

            polygon = radial:: x=5,y=8,radius=80,pts=8  // example
       // post_suffix = HENRY                             // example

      center_assign = 50,-100            // example
     //xcenter_assign = 40               // example
     //ycenter_assign = 50               // example


       visual_hints = vertex_size  = 1             // default
       visual_hints = edge_size    = 1             // default
       visual_hints = vertex_color = dodger_blue   // default
       visual_hints = edge_color   = white         // default
       visual_hints = nextpt_color = yellow        // default
       visual_hints = nextpt_lcolor = aqua         // default
       visual_hints = nextpt_vertex_size = 5       // default
       visual_hints = label        = zone3         // example
}

//----------------------------------------------
Behavior = BHV_Waypoint
{ 
  name         = waypt_survey
  pwt          = 100
  condition    = MODE==SURVEYING
  perpetual    = true
  updates      = SURVEY_UPDATES
  activeflag   = SURVEY_UNDERWAY = true
  inactiveflag = SURVEY_UNDERWAY = false
  endflag      = RETURN = true

         speed = 2   // meters per second
        radius = 5.0
   slip_radius = 15.0
          lead = 8
	  lead_damper=1
	points = format=lawnmower, label=archie_survey, x=$(SURVEY_X), y=$(SURVEY_Y), width=$(WIDTH), height=$(HEIGHT),lane_width=$(LANE_WIDTH), rows=north-south, degs=$(DEGREES)

        repeat = 0
  visual_hints = nextpt_color=red, nextpt_lcolor=green
  visual_hints = vertex_color=yellow, edge_color=gray25
  visual_hints = vertex_size=1, edge_size=1
}

//----------------------------------------------
Behavior = BHV_Waypoint
{
  name       = waypt_return
  pwt        = 100
  condition  = RETURN = true
  condition  = DEPLOY = true
  perpetual  = true
  endflag    = RETURN = false
  endflag    = DEPLOY = false

         speed = 2.0
        radius = 2.0
     nm_radius = 8.0
        points = $(START_POS)
        repeat = 10
          lead = 8
}

//----------------------------------------------
Behavior = BHV_OpRegion
{
  name       = opregion
  pwt        = 100
  condition  = MODE==ACTIVE
  condition  = OPREGION=true
 
             polygon = pts={-50,-40 : 100,20 : 180,20 : 180,-200 : -50,-200 : -100,-75}
  trigger_entry_time = 1
  trigger_exit_time  = 1
        visual_hints = edge_size=1, vertex_size=2
}

//------------------------------------------------
Behavior = BHV_AvoidCollision
{
  name       = avdcollision_
  pwt        = 200
  condition  = AVOID = true
  updates    = CONTACT_INFO
  endflag    = CONTACT_RESOLVED = $[CONTACT]
  templating = spawn

               contact = to-be-set
      on_no_contact_ok = true
           extrapolate = true
                 decay = 30,60

        pwt_outer_dist = 50
        pwt_inner_dist = 20
        completed_dist = 75
     min_util_cpa_dist = 8
     max_util_cpa_dist = 25    
             pwt_grade = linear
   bearing_line_config = white:0, green:0.65, yellow:0.8, red:1.0
}
